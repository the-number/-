folder-numbers-update-with-this () 
{ 
    local D="Update README, with _this_";
    echo =${1:-p -n}=;
    'ls' -1 | while read a; do
        b=$( echo $a|sed - -e s/~/#/ );
        test -f "$a/_this_" && c=$( head -1 $a/_this_ ) && sed README -e '\_'"$( echo $a| sed -e 's,\*,\\*,' )"'_s_]]$_]['"$b"]]': '"$c"'_'${1:-p -n};
    done
}
